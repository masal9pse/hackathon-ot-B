<div class="contain">

    <div class="sidebar">
        <div class="room">
            <h5>Chat Room</h5>
            <ul class="room-list">
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
                <option value="PHP">PHP</option>
                <option value="C#">C#</option>
                <option value="Ruby">Ruby</option>
                <option value="Java">Java</option>
            </ul>
        </div>
        <div class="member">
            <h5>Direct Message</h5>
            <ul id="member-list">
            </ul>
        </div>
    </div>

    <div class="main">
        <div class="group">
            <div class="group-main">
                <h2 class="group-name"> {{ room }} : </h2>
                <ul id="member-list">
                </ul>
            </div>
            <div class="room-exit">
                <input type="button" value="退室する" class="common-button room-exit_button room-btn" onclick="exit();">
            </div>
        </div>

        <div class="chat">
            <div class="timeline">
                <div class="chat-title">
                    <h4>TimeLine</h4>
                    <input id="tlsort" type="button" value="新しいもの順" class="common-button room-memo_button butn"
                        onclick="OnReverse('tl');">
                </div>
                <div class="chat-message">
                    <div id="tlthread"></div>
                </div>

                <div class="chat-text">
                    <form method="post" action="/" id="room">

                        <div class="user">
                            <div class="room-login_user">
                                <input id="tluserName" type="hidden" value={{ userName }}>
                                <input id="tlroom" type="hidden" value={{ room }}>
                            </div>
                        </div>

                        <div class="room-message">
                            <textarea id="tlmessage" rows="4" class="room-message_textarea"
                                placeholder="投稿文を入力してください"></textarea>
                            <!--onkeypress="publish(event.keyCode);" -->
                        </div>
                        <div class="room-submit">
                            <input id="tlpost" type="button" value="投稿"
                                class="common-button room-publish_button room-btn" onclick="timelinePublish();">
                        </div>

                    </form>
                </div>

            </div>

            <div class="groupchat">
                <div class="chat-title">
                    <h4>GroupChat</h4>
                    <input id="grsort" type="button" value="新しいもの順" class="common-button room-memo_button butn"
                        onclick="OnReverse('gr');">
                </div>

                <div class="chat-message">
                    <div id="grthread"></div>
                </div>

                <div class="chat-text">
                    <form method="post" action="/" id="room">
                        <div class="user">
                            <div class="room-login_user">
                                <input id="gruserName" type="hidden" value={{ userName }}>
                                <input id="grroom" type="hidden" value={{ room }}>
                            </div>
                        </div>
                        <div class="room-message">
                            <textarea id="grmessage" rows="4" class="room-message_textarea"
                                placeholder="投稿文を入力してください"></textarea>
                            <!--onkeypress="publish(event.keyCode);" -->
                        </div>
                        <div class="room-submit">
                            <input id="grpost" type="button" value="投稿"
                                class="common-button room-publish_button room-btn" onclick="groupchatPublish();">
                            <input type="button" value="メモ" class="common-button room-memo_button room-btn"
                                onclick="memo('gr');">
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="rightbar">
        <h4 class="dmroom">Direct Message to ~</h4>
        <div class="dm-message">
            <div id="dmthread"></div>
        </div>

        <div class="dmt-text">
            <form method="post" action="/" id="room">
                <div class="user">
                    <div class="room-login_user">
                        <input id="gruserName" type="hidden" value={{ userName }}>
                        <input id="grroom" type="hidden" value={{ room }}>
                    </div>
                </div>
                <div class="room-message">
                    <textarea id="grmessage" rows="4" class="room-message_textarea"
                        placeholder="投稿文を入力してください"></textarea>
                    <!--onkeypress="publish(event.keyCode);" -->
                </div>
                <div class="room-submit">
                    <input id="grpost" type="button" value="投稿" class="common-button room-publish_button room-btn"
                        onclick="groupchatPublish();">
                </div>
            </form>
        </div>
    </div>

</div>



<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
